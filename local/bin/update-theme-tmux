#!/bin/sh
update() {
  THEME=$(cat ~/.local/state/tymek-theme | jq -r '.theme' || echo 'tokyonight')
  MODE="$(cat ~/.local/state/tymek-theme | jq -r '.mode' || echo 'dark')"

  if [ "$THEME" = "tokyonight" ]; then
    if [ "$MODE" = "light" ]; then
      THEME="tokyonight_day"
    else
      THEME="tokyonight_storm"
    fi
    TMUX_THEME="$HOME/.local/share/nvim/lazy/tokyonight.nvim/extras/tmux/$THEME.tmux"
  fi

  tmux source $TMUX_THEME
  tmux-prefix-highlight
}

update

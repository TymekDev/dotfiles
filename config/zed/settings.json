{
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    }
  },
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "project_panel": {
    "button": false
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font"
  }
}
